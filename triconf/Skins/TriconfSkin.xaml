<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:callistoEffects="using:Callisto.Effects" xmlns:callisto="using:Callisto.Controls"
                    xmlns:converters="using:Q42.WinRT.Converters">

    <converters:InverseVisibilityConverter x:Key="InverseVisibilityConverter"/>
    <converters:VisibilityConverter x:Key="VisibilityConverter"/>


    <DataTemplate x:Key="HomeMenuLiveTileDataTemplate">
        <callisto:LiveTile ItemsSource="{Binding Items}"
						   BorderBrush="White" BorderThickness="0"
						   Background="#66000000" Direction="Left" callistoEffects:Tilt.IsTiltEnabled="True">
            <callisto:LiveTile.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding Image, Converter={StaticResource VisibilityConverter}}">
                            <Image.Source>
                                <BitmapImage UriSource="{Binding Image}" />
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding Subtitle}" Grid.Row="0" Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Foreground="White" FontSize="74"
                                        FontWeight="Bold" TextWrapping="NoWrap"
                                    FontFamily="Segoe UI Light" />
                        <Border Background="#99000000" Grid.Row="1" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding Title}" Grid.Row="1" Margin="5,5,5,5"  VerticalAlignment="Bottom"
                                    Foreground="White" FontSize="16"
                                        FontWeight="Bold" MaxHeight="30"
                                    FontFamily="Segoe UI Light" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </callisto:LiveTile.ItemTemplate>
        </callisto:LiveTile>
    </DataTemplate>


